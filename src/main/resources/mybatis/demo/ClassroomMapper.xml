<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lab.project.demo.mapper.ClassroomMapper">

    <resultMap type="classroomEntity" id="ClassroomResult">
        <id     property="id"      column="id"      />
        <result property="classroomName" column="classroom_name"/>
        <result property="content" column="content"/>
        <result property="classroomNum" column="classroom_num"/>
    </resultMap>

    <sql id="selectClassroom">
        select id, classroom_name, content, classroom_num, sort_no, create_time, create_by, update_time, update_by, version, del_flag
        from t_school_classroom
    </sql>

    <!--查询所有教室信息-->
    <select id="selectAllClassroom" resultMap="ClassroomResult">
        <include refid="selectClassroom"/>
        where classroom_name like CONCAT("%",#{classroomName},"%") AND del_flag = 0;
    </select>

    <!--通过主键查询教室信息-->
    <select id="selectClassroomById" resultMap="ClassroomResult">
        <include refid="selectClassroom"/>
        where id = #{id}
    </select>

    <!-- 新增教室信息   -->
    <insert id="addClassroom" parameterType="com.lab.project.demo.domain.ClassroomEntity">
        insert into t_school_classroom (classroom_name,
                                        content,
                                        classroom_num,
                                        create_time,
                                        create_by,
                                        update_time,
                                        update_by,
                                        version,
                                        del_flag)
        values (#{classroomName},
                #{content},
                #{classroomNum},
                #{createTime},
                #{createBy},
                #{updateTime},
                #{updateBy},
                #{version},
                #{delFlag})

    </insert>

    <!--更新教室信息-->
    <update id="updateClassroom" parameterType="com.lab.project.demo.domain.ClassroomEntity">
        update t_school_classroom
        <set>
            <if test="classroomName != null">classroom_name = #{classroomName},</if>
            <if test="content != null">content = #{content},</if>
            <if test="classroomNum != null">classroom_num = #{classroomNum},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="version != null">version = #{version} + 1,</if>
            update_time = sysdate()
        </set>
            where id = #{id} AND version = #{version}
    </update>

    <!--删除教室信息-->
    <update id="deleteClassroom" parameterType="Long">
        update t_school_classroom
        <set>
            del_flag = 2,
            update_time = sysdate()
        </set>
            WHERE id = #{id}
    </update>
</mapper>