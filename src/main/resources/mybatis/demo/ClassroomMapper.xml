<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lab.project.demo.mapper.ClassroomMapper">

    <resultMap type="classroomEntity" id="ClassroomResult">
        <id     property="id"      column="id"      />
        <result property="classroomName" column="classroom_name"/>
        <result property="content" column="content"/>
        <result property="classroomNum" column="classroom_num"/>
    </resultMap>

    <sql id="selectClassroom">
        select id, classroom_name, content, classroom_num, sort_no, create_time, create_by, update_time, update_by, version, del_flag
        from t_school_classroom
    </sql>

    <!--查询所有教室信息-->
    <select id="selectAllClassroom" resultMap="ClassroomResult">
        <include refid="selectClassroom"/>
        where classroom_name like CONCAT("%",#{classroomName},"%")
    </select>

    <!--通过主键查询教室信息-->
    <select id="selectClassroomById" resultMap="ClassroomResult">
        <include refid="selectClassroom"/>
        where id = #{id}
    </select>

    <!-- 新增教室信息   -->
    <insert id="addClassroom" parameterType="com.lab.project.demo.domain.ClassroomEntity">
       insert into t_school_classroom (
        <if test="classroomName != null and classroomName != '' ">classroom_name,</if>
        <if test="content != null and content != '' ">content,</if>
        <if test="classroomNum != null and classroomNum != '' ">classroom_num,</if>
        <if test="sortNo != null and sortNo != '' ">sort_no,</if>
        <if test="createTime != null and createTime != ''">create_time,</if>
        <if test="createBy != null and createBy != ''">create_by,</if>
        <if test="updateTime != null and updateTime != ''">update_time,</if>
        <if test="updateBy != null and updateBy != ''">update_by,</if>
        <if test="version != null and version != ''">version,</if>
        <if test="delFlag != null and delFlag != ''">del_flag,</if>
        create_time
        )values(
        <if test="classroomName != null and classroomName != ''">#{configName},</if>
        <if test="content != null and content != ''">#{content},</if>
        <if test="classroomNum != null and classroomNum != ''">#{classroomNum},</if>
        <if test="sortNo != null and sortNo != ''">#{sortNo},</if>
        <if test="createTime != null and createTime != ''">#{createTime},</if>
        <if test="createBy != null and createBy != ''">#{createBy},</if>
        <if test="updateTime != null and updateTime != ''">#{updateTime},</if>
        <if test="updateBy != null and updateBy != ''">#{updateBy},</if>
        <if test="version != null and version != ''">#{version},</if>
        <if test="delFlag != null and delFlag != ''">#{delFlag},</if>
        sysdate()
        )

    </insert>

    <!--更新教室信息-->
    <update id="updateClassroom" parameterType="com.lab.project.demo.domain.ClassroomEntity">
        update t_school_classroom
        <set>
            <if test="classroomName != null">classroom_name = #{classroomName},</if>
            <if test="content != null">content = #{content},</if>
            <if test="classroomNum != null">classroom_num = #{classroomNum},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="version != null">version = #{version},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            update_time = sysdate()
        </set>
            where id = #{id}
    </update>

    <!--删除教室信息-->
    <delete id="deleteClassroom" parameterType="Long">
        delete from t_school_classroom where id = #{id}
    </delete>
</mapper>